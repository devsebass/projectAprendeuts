<style>
    .custom-background {
        background-color: #F6F6F6;
    }
</style>

<body class="sb-nav-fixed">
    <div class="loader-container">
        <div class="loader"></div>
    </div>
    <nav class="sb-topnav navbar navbar-expand" id="sb-topnav-expand">
        <a href="/student/home" class="navbar-brand ps-3" id="navbar-brand">
            <img src="/img/Logo.svg" width="90px" height="46px" id="nav-img">
        </a>
        <button class="btn btn-link d-md-inline-block me-0" id="sidebarToggle" style="color: #FAFAFA;">
            <i class="fas fa-lg fa-bars"></i>
        </button>
        <h5 id="titleh5">Dashboard</h5>
        <div class="d-none d-md-inline-block ms-auto me-0">
            <img src="/uploads/{{imageUser}}" width="35px">
        </div>
        <h5 class="mx-3" id="titleh5a">{{nameUser}} {{lastnameUser}}</h5>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-footer1">
                            <a href="/student/mentoring" class="nav-link" id="nav-l">
                                <div class="sb-nav-link-icon">
                                    <img src="/img/Reloj.svg" width="25px">
                                </div>
                                Agendar tutoría
                            </a>
                        </div>
                        <div class="nav-link" id="nav-l-info">
                            <div class="sb-nav-link-icon">
                                <img src="/img/Dashboard.svg" width="25px">
                            </div>
                            Dashboard
                        </div>
                        <div class="nav-link collapsed" id="nav-l-info2" data-bs-toggle="collapse"
                            data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon">
                                <img src="/img/Tuto.svg" width="25px">
                            </div>
                            Tutorías
                            <div class="sb-sidenav-collapse-arrow">
                                <i class="fas fa-angle-down"></i>
                            </div>
                        </div>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne"
                            data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                {{#if mentorings}}
                                {{#each mentorings}}
                                <a href="/student/mentoring/list?id=flush-collapse{{id}}" class="nav-link"
                                    id="text1">Tutoria
                                    del {{formatDate date}}</a>
                                {{/each}}
                                {{else}}
                                <p id="text2">No has agendado ninguna tutoría por ahora.</p>
                                {{/if}}
                            </nav>
                        </div>
                        <div class="nav-link collapsed" id="nav-l-info2" data-bs-toggle="collapse"
                            data-bs-target="#collapseLayouts2" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon">
                                <img src="/img/User.svg" width="25px">
                            </div>
                            Cuenta
                            <div class="sb-sidenav-collapse-arrow">
                                <i class="fas fa-angle-down"></i>
                            </div>
                        </div>
                        <div class="collapse" id="collapseLayouts2" aria-labelledby="headingOne"
                            data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a href="/student/data" class="nav-link" id="text1">Mis datos</a>
                                <a href="/student/logout" class="nav-link" id="text1">Cerrar sesión</a>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <span class="fw-bold">Developed by: </span>devsebass
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <div class="px-4">
                <h2 class="mt-3" id="titleh2">¡Bienvenido uteísta!</h2>
                <div class="mt-2 mb-4" id="line"></div>
                <div class="row">
                    <div class="col-xl-12">
                        <div class="carousel m-auto">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="https://www.uts.edu.co/sitio/wp-content/uploads/2021/12/banner-generacon-e-1.jpg"
                                        class="d-block w-100 img-fluid" id="img">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-start mt-4">
                <div class="mt-2" id="bol"></div>
                <h5 style="color: #505050; font-weight: 500;">Tutorías agendadas</h5>
            </div>
            <div class="mt-2" id="cont-tutorias">
                <div class="row">
                    {{#if mentorings}}
                    {{#each mentorings}}
                    <div class="col-4 px-5 py-4" style="padding-right: 0px;">
                        <div class="card text-center custom-background">
                            <div class="card-header fw-bold" style="background: #E5E5E5; color:#505050">
                                Tutoría del {{formatDate date}}
                            </div>
                            <div class="card-body px-3">
                                <h5 class="card-title" id="texts">{{subject}}</h5>
                                <p class="card-text" id="texts">{{teacherName}} {{teacherLastname}}</p>
                                <a href="/student/mentoring/list?id=flush-collapse{{id}}"
                                    class="sb-sidenav-footer6 mx-4">Ver
                                    detalles</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
            </div>
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-2 mt-3 pb-3">
                        <img src="/img/time.svg" width="180px">
                    </div>
                    <div class="col-3 ">
                        <h6 class="text-center" style="color: #505050; font-size: large; margin-top: 35px">
                            No has agendado ninguna tutoría.
                            <span class="fw-bold"> ¿Quieres agendar una?</span>
                        </h6>
                        <a href="/student/mentoring" class="sb-sidenav-footer2"
                            style="color: #FAFAFA; font-weight: 700; text-decoration: none;"> Agendar tutoría</a>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="d-flex justify-content-start mt-4">
            <div class="mt-2" id="bol"></div>
            <h5 style="color: #505050; font-weight: 500;">Materias disponibles</h5>
        </div>
        <div id="myCarousel" class="carousel carousel-dark slide">
            <div class="carousel-inner w-100">
                <div class="carousel-item active">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/admins.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/appm.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/appse.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/games.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/diseñobd.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/estructurapc.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/fpoo.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/motoresbd.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/pensamiento.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/programaciondiv.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/poo.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/programacionweb.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/programaciondiv.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/redes.svg">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <div class="p-0">
                            <img src="/img/matdid.svg">
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" id="carousel-but" type="button" data-bs-target="#myCarousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" id="carousel-but" type="button" data-bs-target="#myCarousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</body>