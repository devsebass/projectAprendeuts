<style>
    .custom-focus-color:focus {
        border-color: #C7D200;
        box-shadow: 0 0 10px #C7D200;
    }

    .custom-hover-color:hover {
        background: #B5BF00;
        color: #FAFAFA;
    }

    .custom-placeholder-color::placeholder {
        color: #b0b0b0;
    }
</style>
    
<body class="container-fluid" id="container-fluid">
    <div class="container py-4 px-4" id="container3">
        <div class="container-email">
            {{#if error}}
                <h4 class="mb-2" id="titler">Digita tu nueva contraseña</h4>
                <div class="text text-danger font-bold mb-1" id="error"></div>
                <p class="text text-danger font-bold mb-1">* {{error}}</p>
            {{else}}
                <h4 class="mb-4" id="titler">Digita tu nueva contraseña</h4>
                <div class="text text-danger font-bold" id="error"></div>
            {{/if}}
            <form action="" method="post" id="myForm">
                <div class="row">
                    <div class="col-6">
                        <div id="container-form">
                            <label for="password" id="password">Contraseña<span id="req"> *</span></label>
                            <input type="password" class="form-control custom-focus-color custom-placeholder-color mb-3" name="password" 
                                id="pass" placeholder="Digita tu contraseña" required>
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="container-form">
                            <label for="password" id="password">Repetir contraseña <span id="req">*</span></label>
                        <input type="password" class="form-control custom-focus-color custom-placeholder-color mb-3"
                            id="confirmPassword" placeholder="Digita tu contraseña" required>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="sb-sidenav-footer6c" id="submit" onclick="return verificarContraseñas()">Restablecer contraseña</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

<script>
    function verificarContraseñas() {
        const password = document.getElementById("pass").value;
        const confirmPassword = document.getElementById("confirmPassword").value;
        const error = document.getElementById("error");

        if (password === confirmPassword) {
            document.getElementById("myForm").submit();
        } else {
            error.innerHTML = "Error: Las contraseñas no coinciden.";
            document.getElementById("pass").value = "";
            document.getElementById("pass").focus();
            document.getElementById("confirmPassword").value = "";
            return false;
        }
    };
</script>