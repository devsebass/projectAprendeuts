        <div id="layoutSidenav_content">
            {{#each mentorings}}
            <form action="/admin/mentoring/edit/{{id}}" method="post" id="miFormulario">
                <div class="m-5" id="cont-form">
                    <div class="row py-4">
                        <input type="text" value="{{id}}" hidden>
                        <div class="col-7" style="margin-left: 50px;">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="modality" class="fw-bold" id="title6b">Modalidad:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color"
                                                    name="modality" id="inputval" value="{{modality}}"
                                                    style="text-transform: capitalize;"
                                                    onblur="capitalizeEachWord(this)" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class=" form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="type" class="fw-bold" id="title6b">Tipo:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color" name="type"
                                                    id="inputval" value="{{type}}" style="text-transform: capitalize;"
                                                    onblur="capitalizeEachWord(this)" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="date" class="fw-bold" id="title6b">Fecha:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="date" class="form-control custom-color custom-focus-color"
                                                    name="date" id="inputval" value="{{formatDate date}}" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="time" class="fw-bold" id="title6b">Hora:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color" name="time"
                                                    id="inputval" value="{{time}}" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="location" class="fw-bold" id="title6b">Lugar:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color"
                                                    name="location" id="inputval" value="{{location}}" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="subject" class="fw-bold" id="title6b">Materia:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color"
                                                    name="subject" id="inputval" value="{{subject}}" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="student" class="fw-bold" id="title6b">Estudiante:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color" name=""
                                                    id="inputval" value="{{studentName}} {{studentLastname}}" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="teacher" class="fw-bold" id="title6b">Docente:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color" name=""
                                                    id="inputval" value="{{teacherName}} {{teacherLastname}}" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
