        <div id="layoutSidenav_content">
            {{#each students}}
            <form action="/admin/student/edit/{{id}}" method="post" id="miFormulario">
                <div class="m-5" id="cont-form">
                    <div class="row py-4">
                        <input type="text" value="{{id}}" hidden>
                        <div class="col-3 d-flex justify-content-center align-items-center" style="margin-left: 30px;">
                            <img src="/uploads/{{image}}" id="imgu" alt="Imagen del Estudiante" name="{{image}}"
                                width="50px">
                        </div>
                        <div class="col-8" style="margin-left: 20px;">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="name" class="fw-bold" id="title6b">Nombre(s):</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color" name="name"
                                                    id="inputval" value="{{name}}" style="text-transform: capitalize;"
                                                    onblur="capitalizeEachWord(this)" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class=" form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="lastname" class="fw-bold" id="title6b">Apellido(s):</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color"
                                                    name="lastname" id="inputval" value="{{lastname}}"
                                                    style="text-transform: capitalize;"
                                                    onblur="capitalizeEachWord(this)" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="email" class="fw-bold" id="title6b">Correo
                                                    institucional:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color" name="email"
                                                    id="inputval" value="{{email}}" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="pass" class="fw-bold" id="title6b">Contraseña:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="password" class="form-control custom-focus-color"
                                                    name="password" id="inputval">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="doc_type" class="fw-bold" id="title6b">Tipo de
                                                    documento:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color"
                                                    name="doc_type" id="inputval" value="{{doc_type}}" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="doc_number" class="fw-bold" id="title6b">Número de
                                                    documento:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color"
                                                    name="doc_number" id="inputval" value="{{doc_number}}" min="0"
                                                    oninput="limitarCaracteres(this, 10)" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="row">
                                            <div class="mb-2">
                                                <label for="gender" class="fw-bold" id="title6b">Género:</label>
                                            </div>
                                            <div class="col-11">
                                                <input type="text" class="form-control custom-focus-color" name="gender"
                                                    id="inputval" value="{{gender}}" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mt-4 mb-3">
                                        <div id="letterp" style="margin-left: 160px;" data-bs-toggle="collapse"
                                            data-bs-target="#collapseExample" aria-expanded="false"
                                            aria-controls="collapseExample">
                                            ¿Quiere actualizar la información del estudiante?
                                        </div>
                                    </div>
                                    <div class="collapse" id="collapseExample">
                                        <div class="row">
                                            <div class="col-6 my-3">
                                                <div type="submit" class="sb-sidenav-footer4b"
                                                    style="margin-left: 230px;" onclick="enviarFormulario()"
                                                    id="submit">
                                                    Guardar
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </form>
        </div>
